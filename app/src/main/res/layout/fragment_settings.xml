<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Call Analytics Settings"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Agent Configuration -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. AGENT CONFIGURATION"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Agent Code:"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerAgent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agent Name:"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etAgentName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Enter your full name"
            android:layout_marginBottom="16dp" />

        <!-- Webhook Configuration -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. WEBHOOK CONFIGURATION"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Webhook URL:"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etWebhookUrl"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="https://your-webhook-url.com"
            android:inputType="textUri"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnSaveSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="💾 Save Settings"
            android:backgroundTint="#2196F3"
            android:textColor="@android:color/white"
            android:layout_marginBottom="24dp" />

        <!-- Failed Webhooks -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. WEBHOOK MANAGEMENT"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/tvFailedWebhooks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="❌ 3 failed webhooks"
            android:textColor="#F44336"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnRetryWebhooks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🔄 Retry Failed Webhooks"
            android:backgroundTint="#F44336"
            android:textColor="@android:color/white"
            android:layout_marginBottom="24dp"
            android:visibility="gone" />

        <!-- Status Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. STATUS"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F5F5F5"
            android:padding="12dp"
            android:fontFamily="monospace"
            android:textSize="12sp"
            android:text="Loading status..." />

    </LinearLayout>

</ScrollView>