<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Call Analytics"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Agent Code and Name -->
        <TextView
            android:id="@+id/tvAgentInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agent12 - (Karan)"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#3498DB"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Total Talk Time Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E3F2FD"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TOTAL TALK TIME"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvTotalTalkTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2h 52m 16s"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:gravity="center" />

        </LinearLayout>

        <!-- Analytics Date Header -->
        <TextView
            android:id="@+id/tvAnalyticsDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Analytics for 4 August"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Date Selection Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/btnToday"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Today"
                android:textColor="@android:color/white"
                android:background="#4CAF50"
                android:layout_marginEnd="8dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnPickDate"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="ðŸ“… Pick Date"
                android:textColor="@android:color/white"
                android:background="#FF9800"
                android:layout_marginStart="8dp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Call Statistics Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“Š"
                android:textSize="18sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CALL STATISTICS"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2C3E50" />

        </LinearLayout>

        <!-- Total Calls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginBottom="8dp">

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="#2196F3"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TOTAL CALLS:"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#2C3E50" />

                    <TextView
                        android:id="@+id/tvTotalCalls"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="108"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#2196F3" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvTotalCallDuration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Call Duration: 2h 52m 16s"
                    android:textSize="12sp"
                    android:textColor="#7F8C8D"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Incoming Calls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginBottom="8dp">

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="#4CAF50"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="INCOMING CALLS:"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#2C3E50" />

                    <TextView
                        android:id="@+id/tvIncomingCalls"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvIncomingTalkTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Talk Time: 27m 4s"
                    android:textSize="12sp"
                    android:textColor="#7F8C8D"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Outgoing Calls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginBottom="8dp">

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="#FF9800"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="OUTGOING CALLS:"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#2C3E50" />

                    <TextView
                        android:id="@+id/tvOutgoingCalls"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="90"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#FF9800" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvOutgoingTalkTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Talk Time: 2h 25m 12s"
                    android:textSize="12sp"
                    android:textColor="#7F8C8D"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Missed Calls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="#F44336"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="MISSED CALLS:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50" />

                <TextView
                    android:id="@+id/tvMissedCalls"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#F44336" />

            </LinearLayout>

        </LinearLayout>

        <!-- Productivity Metrics Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“ˆ"
                android:textSize="18sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PRODUCTIVITY METRICS:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2C3E50" />

        </LinearLayout>

        <!-- Productivity Metrics -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="#F8F9FA">

            <TextView
                android:id="@+id/tvAverageCallDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Average call duration: 1m 35s"
                android:textSize="14sp"
                android:textColor="#2C3E50"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvAnswerRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Answer rate: 83.3%"
                android:textSize="14sp"
                android:textColor="#2C3E50" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>