<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/overlay_background"
    android:orientation="vertical"
    android:padding="16dp"
    android:elevation="8dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“ž"
            android:textSize="24sp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Call Analytics Reminder"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/tvCloseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âœ•"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="8dp" />

    </LinearLayout>

    <!-- Message -->
    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="It's been 5 minutes since your last call. Time to make another call!"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp" />

    <!-- Idle Time Display -->
    <TextView
        android:id="@+id/tvIdleTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Idle for: 5 minutes"
        android:textSize="12sp"
        android:textColor="#E0E0E0"
        android:layout_marginBottom="16dp" />

    <!-- Action Button -->
    <Button
        android:id="@+id/btnCallNow"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="OK, I will Call Now"
        android:textColor="#2196F3"
        android:background="@drawable/button_background"
        android:textStyle="bold"
        android:textSize="14sp" />

</LinearLayout>